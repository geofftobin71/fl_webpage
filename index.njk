---
layout: layouts/home.njk
---

<header class="hero is-primary">
<div class="hero-body">
<h1 class="is-size-1 has-text-centered">Floriade</h1>
<h2 class="is-size-2 has-text-centered">fresh & dried flowers for any occasion</h2>
</div>
</header>

<section class="hero">
<div class="gallery-container">
{% set insta_images = instagram | head(12)%}
{% for image in insta_images %}
    <img src="{{ image.media_url }}">
    <!-- <p>{{ image.caption }}</p> -->
{% endfor %}
</div>
</section>

<ul>
  {% for post in collections.posts | reverse %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title }}</a>
  </li>
  {% endfor %}
</ul>
