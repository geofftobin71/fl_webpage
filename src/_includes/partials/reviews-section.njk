<style>
[type="radio"] {
  position: absolute;
  opacity: 0;
  cursor: pointer;
}
[type="radio"] ~ .off {
  display: block;
}
[type="radio"] ~ .on {
  display: none;
}
[type="radio"]:checked ~ .off {
  display: none;
}
[type="radio"]:checked ~ .on {
  display: block;
}
</style>

<section id="reviews" class="bg-shade1 font-size-1">
  <ul class="slider center-both" style="padding:1em 0">
    {% set review_list = reviews | filterWeddingReviews(false) | removeLongReviews(300) | shuffle | head(5) -%}
    {% for item in review_list -%}
      <li id="item{{ loop.index }}" class="slider-item">
        <div class="wrapper text-wrapper font-secondary">
          <div class="stack">
            <p class="font-size-1 text-center">{{ item.review }}</p>
            <p class="font-size-0 text-center">{{ item.name }}</p>
          </div>
        </div>
      </li>
    {% endfor -%}
  </ul>

  <nav style="display:flex;justify-content:center">
    {% for item in review_list -%}
      <label style="width:var(--step--1);height:var(--step--1);margin-right:16px">
        <input type="radio" name="reviews" {{ 'checked' if loop.first }}>
        <span class="on" role="button" aria-label="Review {{ loop.index }}">{{ '/src/svg/circle.svg' | svgContents | safe }}</span>
        <span class="off" role="button" aria-label="Review {{ loop.index }}">{{ '/src/svg/circle-o.svg' | svgContents | safe }}</span>
      </label>
    {% endfor -%}
  </nav>

  {#
  <div class="wrapper page-wrapper slider-controls req-js" style="display:flex;justify-content:space-between">
    <nav class="prev" onclick="scrollToPrevItem('#reviews')">
      <span role="button" style="width:var(--step-1)" aria-label="Previous">{{ '/src/svg/chevron-left.svg' | svgContents | safe }}</span>
    </nav>
    <nav class="next" onclick="scrollToNextItem('#reviews')">
      <span role="button" style="width:var(--step-1)" aria-label="Next">{{ '/src/svg/chevron-right.svg' | svgContents | safe }}</span>
    </nav>
  </div>
  #}

  <br>
  <div class="text-center font-size-0"><a href="/reviews" class="button" role="button">Read More Reviews</a></div>
</section>
