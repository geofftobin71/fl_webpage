{% set css %}
.slider {
  position: relative;
  overflow-x: hidden;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: flex-end;
  height: 100%;
}
.slider__inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 500%;
  height: 100%;
  display: flex;
  flex-wrap: nowrap;
  transition: left 0.5s;
}
.slider__content {
  width: 100%;
  height: 85%;
  overflow-x: hidden;
  overflow-y: auto;
}
.slider__content > div {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width:100%;
  min-height:100%;
}
.slider__nav {
  z-index: 1;
  padding-left:0.5em;
}
.slider__nav:checked:nth-of-type(1) ~ .slider__inner {
  left: 0%;
}
.slider__nav:checked:nth-of-type(2) ~ .slider__inner {
  left: -100%;
}
.slider__nav:checked:nth-of-type(3) ~ .slider__inner {
  left: -200%;
}
.slider__nav:checked:nth-of-type(4) ~ .slider__inner {
  left: -300%;
}
.slider__nav:checked:nth-of-type(5) ~ .slider__inner {
  left: -400%;
}
.slider__nav {
  opacity: 0;
  width: 0;
  height: 0;
}
.slider__nav + label {
  z-index:1;
  content: "";
  width: 1em;
  height: 1em;
  display: block;
  border: 0.1em solid currentColor;
    border-radius: 50%;
}
.slider__nav:checked + label {
  background: radial-gradient(currentcolor 40%, rgba(255, 0, 0, 0) 41%);
}
{% endset %}

<style>
  {{ css | cssmin | safe }}
</style>

<section class="full-width bg-shade1 font-size-1" style="height:22em;max-height:100vh">
  <div class="slider">
    <input type="radio" name="slider" id="slide1" class="slider__nav" checked="checked"/><label class="font-size-0" for="slide1"></label>
    <input type="radio" name="slider" id="slide2" class="slider__nav"/><label class="font-size-0" for="slide2"></label>
    <input type="radio" name="slider" id="slide3" class="slider__nav"/><label class="font-size-0" for="slide3"></label>
    <input type="radio" name="slider" id="slide4" class="slider__nav"/><label class="font-size-0" for="slide4"></label>
    <input type="radio" name="slider" id="slide5" class="slider__nav"/><label class="font-size-0" for="slide5"></label>
    <div class="slider__inner">
      {% for item in reviews | removeLongReviews(300) | shuffle | head(5) -%}
        <div class="wrapper" style="width:100%;height:100%">
          <div class="slider__content center font-secondary">
            <div class="flow">
              <p class="font-size-1">{{ item.review }}</p>
              <p class="font-size-0 text-center">{{ item.name }}</p>
            </div>
          </div>
        </div>
      {% endfor -%}
    </div>
  </div>
</section>
