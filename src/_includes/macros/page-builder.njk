{% macro split_image_text_section(image, text, swap) %}

<section>
  <div class="domino{{ ' swap' if swap }}">
    <figure>
      <img class="img-cover" src="{{ site.cloudinary_url }}{{ image }}" alt="{{ alt or site.alt }}">
    </figure>
    <div class="center-both">
      <article class="wrapper text-wrapper">
        {% markdown text %}
      </article>
    </div>
  </div>
</section>

{% endmacro %}
