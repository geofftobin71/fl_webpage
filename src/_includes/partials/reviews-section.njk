{% set css %}
nav {
  color: white;
  padding: 0;
  width: var(--step-4);
  height: var(--step-4);
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  cursor: pointer;
}

nav svg {
  -webkit-filter: drop-shadow(0px 0px 2px rgba(0,0,0,0.5)) drop-shadow(0px 0px 8px rgba(0,0,0,0.2));
  filter: drop-shadow(0px 0px 2px rgba(0,0,0,0.5)) drop-shadow(0px 0px 8px rgba(0,0,0,0.2));
}
{% endset %}

<style>
  {{ css | cssmin | safe }}
</style>

<section id="reviews" class="bg-shade1 font-size-1">
  <ul class="slider center-both" style="padding:1em 0">
    {% for item in reviews | removeLongReviews(300) | shuffle | head(5) -%}
      <li id="item{{ loop.index }}" class="slider-item">
        <div class="wrapper text-wrapper font-secondary">
          <div class="stack">
            <p class="font-size-1 text-center">{{ item.review }}</p>
            <p class="font-size-0 text-center">{{ item.name }}</p>
          </div>
        </div>
      </li>
    {% endfor -%}
  </ul>
  <noscript><p class="color-shade2 text-center font-secondary font-size--1">&lt;&lt;&lt;&nbsp;&nbsp;&nbsp;&nbsp;scroll&nbsp;&nbsp;&nbsp;&nbsp;&gt;&gt;&gt;<br><br></p></noscript>
  <div class="req-js" style="display:flex;justify-content:space-between">
    <nav class="prev" onclick="scrollToPrevItem('#reviews')">
      <span style="width:var(--step-1)" title="Prev">{{ '/src/svg/chevron-left.svg' | svgContents | safe }}</span>
    </nav>
    <nav class="next" onclick="scrollToNextItem('#reviews')">
      <span style="width:var(--step-1)" title="Next">{{ '/src/svg/chevron-right.svg' | svgContents | safe }}</span>
    </nav>
  </div>
  <div class="text-center font-size-0"><button><a href="/reviews">Read More Reviews</a></button></div>
</section>
