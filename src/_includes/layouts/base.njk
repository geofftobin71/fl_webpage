{% block pre %}{% endblock %}
<!DOCTYPE html>
<html lang="en" id="top">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1.0, width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    {% include "partials/meta-info.njk" %}
    {% if sitemap.ignore %}
    <meta name="robots" content="noindex" />
    {% endif %}
    {% include "partials/favicon.njk" %}

    {% set css %}
    {% include "css/reset.css" %}
    {% include "css/modular-scale.css" %}
    {% include "css/theme.njk" %}
    {% include "css/layout.css" %}
    {% include "css/hamburger-menu.css" %}
    {% endset %}

    <style>
    {{ css | cssmin | safe }}
    </style>

    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css" />

    {% block head %}
    {% endblock %}

<noscript><style>.req-js,[data-src]{display:none !important}.slider{-ms-overflow-style:auto !important;scrollbar-width:thin !important}.slider::-webkit-scrollbar{visibility:visible !important;height:8px}.slider::-webkit-scrollbar-track{background:rgba(0,0,0,0.1);border-radius:8px}.slider::-webkit-scrollbar-thumb{border-radius:8px;background:var(--color-shade2)}</style></noscript>

  </head>

  <body>
    {% block content %}
      {{ content | safe }}
    {% endblock %}

    {% block foot %}
      {% include "partials/hamburger-menu.njk" %}
      {% set js %}
      {% include "js/lazy-images.js" %}
		    window.cookieconsent.initialise({
		        "palette": {
		              "popup": {
		                      "background": "#a6b3ae",
		                      "text": "#3d4844"
		                    },
		              "button": {
		                      "background": "#3d4844",
		                      "text": "#a6b3ae"
		                    }
		            },
		        "theme": "classic",
		        "content": {
		              "message": "We use cookies to improve your browsing experience on our website, and to analyze our website traffic.",
		              "dismiss": "Accept",
		              "link": "Read our Cookie Policy",
		              "href": "https://floriade.co.nz/cookie-policy/"
		            }
		    });
      {% endset %}

      <script src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js" data-cfasync="false"></script>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        {{ js | jsmin | safe }}
      </script>
    {% endblock %}

  </body>
</html>
