{% extends "layouts/base.njk" %}

{% block content %}
  <style>body,main{flex:1;display:flex;flex-direction:column;}.logo{width:20vmin;min-width:125px;margin:0 auto;}.site-menu{position:absolute;top:0;left:0;right:0;}</style>
  <main>
  <div class="cover" style="flex:1;">
    <figure class="background" style="--brightness:{{ header.brightness or '50' }}%">
      {% set transforms = "c_fill,ar_1,q_auto,f_auto,g_auto:subject/" %}
      {% set src = site.cloudinary_url + "/w_900," + transforms + (header.image | stripVersion) %}
      {% set lqip_path = site.cloudinary_url + "/c_fill,w_64,h_64,f_jpg,g_auto:subject,e_blur:200/" + (header.image | stripVersion) %}
      <noscript><img src="{{ src }}" alt="{{ page_alt or site.alt }}"></noscript>
      <img data-srcset="
      {%- set comma = joiner() -%}
      {%- for w in image_sizes -%}
        {%- set srcset = site.cloudinary_url + "/w_" + w + "," + transforms + (header.image | stripVersion) + " " + w + "w" -%}
        {{ comma() }}{{ srcset }}
      {%- endfor -%}
      " sizes="100vw" data-src="{{ src }}" src="{{ lqip_path | lqip }}" alt="{{ page_alt or site.alt }}" loading="lazy">
    </figure>
    <nav class="site-menu text-lowercase text-shadow font-secondary link-lighter">
      {{ collections.all | eleventyNavigation | eleventyNavigationToHtml | safe }}
      {{ collections.all | eleventyNavigation("Flowers") | eleventyNavigationToHtml | safe }}
    </nav>
    <div class="centered">
      <figure class="logo">
        <a href="/">
          <img src="{{ '/images/floriade-logo.png' | url }}" width="320" height="269" alt="Floriade logo">
        </a>
      </figure>
      <div class="wrapper text-wrapper flow bigfonts font-secondary text-center text-shadow" style="--measure:60ch">
        <h1>{{ (header.title or title) | lower }}</h1>
        {% markdown text %}
      </div>
    </div>
  </div>
  </main>
{% endblock %}

{% block foot %}
  {{ super() }}
  {% set js %}
  {% include "js/lazy-images.js" %}
  {% endset %}

  <script>
    {{ js | jsmin | safe }}
  </script>
{% endblock %}
