{% extends 'layouts/base.njk' %}

{% block head %}
  <link rel="stylesheet" href="{{ '/css/instagram.css' | url }}">
  <link rel="stylesheet" href="{{ '/css/datepicker.min.css' | url }}">
{% endblock %}

{% block foot %}
  <script src="{{ '/scripts/datepicker.min.js' | url }}"></script>
  <script>
  const elem1 = document.querySelector('input[name="datepicker"]');
  const datepicker1 = new Datepicker(elem1, {
    buttonClass: 'uk-button uk-button-small',
    datesDisabled: ['Monday 17 August 2020'],
    daysOfWeekDisabled: [0],
    minDate: new Date(),
    disableTouchKeyboard: true,
    format: 'D d M yyyy',
    maxView: 0,
    nextArrow: '>',
    prevArrow: '<',
    
  });
  
  const elem2 = document.getElementById('inline');
  const datepicker2 = new Datepicker(elem2, {
    buttonClass: 'uk-button',
  });

</script>
{% endblock %}