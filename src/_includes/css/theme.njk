@font-face {
  font-family: Poppins;
  font-weight: normal;
  src: url("/fonts/poppins-light.woff") format("woff"),
       url("/fonts/poppins-light.ttf") format("truetype");
  font-display: swap;
}

@font-face {
  font-family: Kollektif;
  font-weight: normal;
  src: url("/fonts/kollektif.woff") format("woff"),
       url("/fonts/kollektif.ttf") format("truetype");
  font-display: swap;
}

@font-face {
  font-family: Kollektif;
  font-weight: bold;
  src: url("/fonts/kollektif-bold.woff") format("woff"),
       url("/fonts/kollektif-bold.ttf") format("truetype");
  font-display: swap;
}

:root {
  --font-family-base: Poppins, sans-serif;
  --font-family-secondary: Kollektif, sans-serif;

  --font-weight-base: normal;
  --font-weight-secondary: normal;

{% for token, value in tokens.colors %}
  --{{ token | hyphenate }}: {{ value }};
{%- endfor %}
}

{% for token, value in tokens.colors %}
.{{ token | hyphenate | replace("color-", "bg-") }} { background: {{ value }} }
{%- endfor %}

{% for token, value in tokens.colors %}
.{{ token | hyphenate }} { color: {{ value }} }
{%- endfor %}

{% for token, value in tokens.colors %}
.{{ token | hyphenate | replace("color-", "border-") }} { border: 1px solid {{ value }} }
{%- endfor %}
.border-red { border: 1px solid #FF0000 }
.border-green { border: 1px solid #00FF00 }
.border-blue { border: 1px solid #0000FF }

.link-primary a:link { color: var(--color-primary); }
.link-primary a:visited { color: var(--color-primary); }
.link-primary a:hover { color: var(--color-shade1); }
.link-primary a:active { color: var(--color-shade1); }

.link-light a:link { color: var(--color-mid-grey); }
.link-light a:visited { color: var(--color-mid-grey); }
.link-light a:hover { color: var(--color-light-grey); }
.link-light a:active { color: var(--color-light-grey); }

.link-dark a:link { color: var(--color-dark-grey); }
.link-dark a:visited { color: var(--color-dark-grey); }
.link-dark a:hover { color: var(--color-mid-grey); }
.link-dark a:active { color: var(--color-mid-grey); }

.font-base {
  font-family: var(--font-family-base);
  font-weight: var(--font-weight-base);
  font-size: var(--step-0);
}

.font-secondary {
  font-family: var(--font-family-secondary);
  font-weight: var(--font-weight-secondary);
  font-size: var(--step-0);
}

.font-family-base {
  font-family: var(--font-family-base);
}

.font-family-secondary {
  font-family: var(--font-family-secondary);
}

.font-weight-base {
  font-weight: var(--font-weight-base);
}

.font-weight-secondary {
  font-weight: var(--font-weight-secondary);
}

.font-size-5 { font-size: var(--step-5); }
.font-size-4 { font-size: var(--step-4); }
.font-size-3 { font-size: var(--step-3); }
.font-size-2 { font-size: var(--step-2); }
.font-size-1 { font-size: var(--step-1); }
.font-size-0 { font-size: var(--step-0); }
.font-size--1 { font-size: var(--step--1); }
.font-size--2 { font-size: var(--step--2); }

body {
  color: var(--color-white);
  background: var(--color-primary);
  a:link { color: var(--color-mid-grey); }
  a:visited { color: var(--color-mid-grey); }
  a:hover { color: var(--color-light-grey); }
  a:active { color: var(--color-light-grey); }
}

body {
  font-family: var(--font-family-base);
  font-weight: var(--font-weight-base);
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-family-secondary);
  font-weight: var(--font-weight-secondary);
}

body { font-size: var(--step-0); }
h1 { font-size:var(--step-3); }
article h1 { font-size:var(--step-3); }
aside h1 { font-size:var(--step-3); }
nav h1 { font-size:var(--step-3); }
section h1 { font-size:var(--step-3); }
h2 { font-size: var(--step-2); }
h3 { font-size: var(--step-1); }
h4 { font-size: var(--step-0); }
h5 { font-size: var(--step--1); }
h6 { font-size: var(--step--2); }

