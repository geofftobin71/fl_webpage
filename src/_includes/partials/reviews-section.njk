<section id="reviews" class="bg-shade1 font-size-1" style="--section-space:0">
  <ul class="slider" style="padding:1em 0;align-items:center">
    {% for item in reviews | filterWeddingReviews(false) | removeLongReviews(300) | shuffle | head(5) -%}
      <li id="review{{ loop.index }}" class="slider-item">
        <div class="wrapper text-wrapper font-secondary">
          <div class="vertical center flow">
            <p class="font-size-1 text-center">{{ item.review }}</p>
            <p class="font-size-0 text-center color-shade4">{{ item.name }}</p>
          </div>
        </div>
      </li>
    {% endfor -%}
  </ul>
  <div class="horizontal space-between wrapper page-wrapper slider-controls req-js">
    <nav class="prev" onclick="scrollToPrevItem('#reviews')">
      <span role="button" style="width:var(--step-1)" aria-label="Previous">{{ '/src/svg/chevron-left.svg' | svgContents | safe }}</span>
    </nav>
    <nav class="next" onclick="scrollToNextItem('#reviews')">
      <span role="button" style="width:var(--step-1)" aria-label="Next">{{ '/src/svg/chevron-right.svg' | svgContents | safe }}</span>
    </nav>
  </div>
  <br>
  <div class="horizontal center font-size-0"><a href="/reviews" class="button" role="button">Read More Reviews</a></div>
</section>
