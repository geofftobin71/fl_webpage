---
title: Reviews
layout: layouts/reviews.njk
---

<main>
<section class="wrapper">
  <h1>{{ title }}</h1>
</section>
<section class="wrapper bg-lighter-grey">
  <div class="reviews wrapper">
    <ul class="flow">
      {% for item in reviews | shuffle -%}
        <li>
          <p>{{ item.review }}</p><br>
          <h4 style="text-align:right">{{ item.name }}</h4>
        </li>
      {% endfor -%}
    </ul>
  </div>
</section>
</main>
