{% set metaTitle = title + " - " + site.name %}
{% set metaDesc = description or site.description %}
{% set metaImage = social_image or site.url + site.social_image %}
{% set currentUrl = site.url + page.url %}

{% if page.url == "/" %}
  {% set metaTitle = site.name + " - " + site.tagline %}
{% endif %}

<title>{{ metaTitle }}</title>
<link rel="canonical" href="{{ currentUrl }}" />

<meta property="og:site_name" content="{{ site.name }}" />
<meta property="og:title" content="{{ metaTitle }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ currentUrl }}" />

{% if site.authorHandle %}
  <meta name="twitter:creator" content="@{{ site.authorHandle | replace('@', '') }}" />
{% endif %}

<meta name="description" content="{{ metaDesc }}" />
<meta name="twitter:description" content="{{ metaDesc }}" />
<meta property="og:description" content="{{ metaDesc }}" />

<meta name="google-site-verification" content="jKxqqGfwRXbvUEf4V-wnsFmeRN9RxYmzBE4AuhjfHvQ">
<meta name="p:domain_verify" content="08604940072e4c11a3b6f34dc6225e86"/>

<meta property="og:image" content="{{ metaImage }}" />
<meta name="twitter:image" content="{{ metaImage }}" />
<meta property="og:image:alt" content="Page image for {{ site.name }}" />
<meta name="twitter:image:alt" content="Page image for {{ site.name }}" />
