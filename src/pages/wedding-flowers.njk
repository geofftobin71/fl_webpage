---
title: Wedding Flowers
header_image: wedding-flowers/wedding-flowers-by-floriade-00033
layout: layouts/gallery.njk
alt: Wedding Flowers by Floriade
eleventyNavigation:
  key: Wedding Flowers
  order: 40
---

<main>
<section>
  <div class="wrapper page-wrapper">
    <ul class="auto-grid gallery">
      {% set gallery = wedding_flowers_gallery.resources | shuffle %}

      {% for item in gallery -%}
        {% if item.aspect_ratio > 1.38 %}
          {% set aspect = "4x3" %}
          {% set width = "640" %}
          {% set height = "480" %}
        {% elif item.aspect_ratio > 0.72 %}
          {% set aspect = "1x1" %}
          {% set width = "320" %}
          {% set height = "320" %}
        {% else %}
          {% set aspect = "2x3" %}
          {% set width = "320" %}
          {% set height = "480" %}
        {% endif %}
        <li class="frame frame{{ aspect }} round shadow">
          <img data-src="{{ site.cloudinary_url }}/c_fill,w_{{ width }},h_{{ height }},q_auto,f_auto,g_auto:subject/{{ item.public_id }}" alt="{{ item.context.alt or alt }}" title="{{ item.context.alt or alt }}{% if item.context["Credit Name"] %} - Photo credit {{ item.context["Credit Name"] }}{% endif %}" width="{{ width }}" height="{{ height }}" onclick="openLightbox();showSlide({{ loop.index }})" style="cursor:pointer" loading="lazy">
        </li>
        {%- endfor %}
    </ul>
  </div>
</section>
</main>

{# ----- Gallery Lightbox ----- #}

<div id="lightbox">
  <nav class="close" onclick="closeLightbox()">&times;</nav>
  {% for item in gallery -%}
    <div class="lightbox__slide">
      <img data-srcset="
      {%- for size in image_sizes %}
        {{ site.cloudinary_url }}/c_limit,w_{{ size }},h_{{ size }},q_auto,f_auto/{{ item.public_id }} {{ size }}w{{ ',' if not loop.last }}
      {%- endfor %}
      " sizes="{{ "80vh" if item.aspect_ratio < 1 else "80vw" }}" data-src="{{ site.cloudinary_url }}/c_limit,w_900,h_900,q_auto,f_auto/{{ item.public_id }}" alt="{{ item.context.alt or alt }}" title="{{ item.context.alt or alt }}{% if item.context["Credit Name"] %} - Photo credit {{ item.context["Credit Name"] }}{% endif %}" width="{{ item.width }}" height="{{ item.height }}" loading="lazy">
      <div class="caption">
        <h4>{{ item.context.alt or alt }}</h4>
      <h5 class="link-light">{% if item.context["Credit Link"] %}Photo credit <a href="{{ item.context["Credit Link"] | safe }}" target="_blank">{{ item.context["Credit Name"] }}</a>{% else %}&nbsp;{% endif %}</h5>
      <h5 class="link-light"><a href="mailto:{{ site.email }}?subject=Gallery%20Enquiry&amp;body=Hi%20Annwyn%0A%0A{{ item.context.alt or alt }}%0A%0A{{ site.cloudinary_url }}/c_limit,w_1200,h_1200,q_auto,f_auto/{{ item.public_id }}">Email Floriade about this image{# ( {{ item.public_id }} ) #}</a></h5>
      </div>

      {% if loop.index > 1 %}
        <nav class="prev" onclick="showSlide({{ loop.index - 1 }})">&lt;</nav>
      {% else %}
        <nav class="prev">&nbsp;</nav>
      {% endif %}
      {% if loop.index < gallery | length %}
        <nav class="next" onclick="showSlide({{ loop.index + 1 }})">&gt;</nav>
      {% else %}
        <nav class="next">&nbsp;</nav>
      {% endif %}
    </div>
    {%- endfor %}
</div>
